{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/editTrick.css') }}" rel="stylesheet"/>
{% endblock %}
{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>
    <div class="container mt-5 d-flex justify-content-center">
        <div class="logForm w-50">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe',
                'attr': {'class': 'form-control'}
            }) }}
            <label for="verifPassword">Confirmer le mot de passe</label>
            <input type="password" class="form-control" name="verifPassword">

            <button type="submit" class="btn btn-outline-success mt-1" >Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
